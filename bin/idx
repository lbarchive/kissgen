NAME=IDX


##############
# generation #
##############


idx_t2h_conf()
{
    echo 't2h_hook_pre=(t2h_filter_linkify)'
}


# generator directory list 00INDEX.html for $2 directory
# $1: dir path
# $2: html dirtory
idx_dir()
{
    local dir_path="$1"
    local hd="${2%/}"   # output HTML directory
    cd "$hd"

    echo "$NAME: [IDX] $IDX_HTML_DIR$dir_path"
    {
        echo "Index of $dir_path"
        echo
        echo "[C] ."
        echo
        if [[ "$dir_path" != '/' ]]; then
            echo "[I] ../00INDEX.html"
            echo
            echo "    [U] .."
            echo
        fi
        echo

        for d in */; do
            [[ "$d" == '*/' ]] && continue
            ( idx_dir "$dir_path$d" "$d" ) >&2
            d="${d%/}"
            echo "[I] ./$d/00INDEX.html"
            echo
            echo "    [D] ./$d"
            echo
        done
        echo

        for h in *.html; do
            [[ "$h" == '00INDEX.html' ]] && continue
            echo "[H] ./$h"
            echo
        done
    } |
    {
        if [[ -z "$IDX_T2H_CONF" ]]; then
            t2h -c <(idx_t2h_conf) -t "Index of $dir_path" - '00INDEX.html'
        else
            t2h -c "$IDX_T2H_CONF" -t "Index of $dir_path" - '00INDEX.html'
        fi
    }
}


################
# command-line #
################


idx_usage()
{
    echo "Usage: $(basename "$0") <html.dir>"
}


IDX_HELP="Generating directory listings

Options:
    -t <t2h.sh>     configuration script for t2h

    -h              this help message
"


idx_parse()
{
    OPTIND=1
    while getopts "t:h" ARG; do
        case "$ARG" in
            t)  IDX_OPT_T2H_CONF="$OPTARG";;
            h)
                idx_usage
                idx_help
                exit 0
                ;;
        esac
    done

    shift $((OPTIND - 1))

    if (($# != 1)); then
        idx_usage >&2
        exit 1
    fi

    IDX_HTML_DIR="$1"
    if [[ -r "$IDX_OPT_T2H_CONF" ]]; then
        IDX_T2H_CONF="$(readlink -f "$IDX_OPT_T2H_CONF")"
    fi
}


idx_main()
{
    idx_parse "$@"
    idx_dir '/' "$IDX_HTML_DIR"
}


[[ "$0" != "$BASH_SOURCE" ]] || idx_main "$@"
